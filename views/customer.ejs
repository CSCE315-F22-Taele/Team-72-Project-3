<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PlaceOrder</title>
    <link rel="stylesheet" href="/styles/main.css">
    <link rel="stylesheet" href="/styles/customer.css">
    <script src="/scripts/customer.js" defer></script>
    <script type="module" src="/modules/globals.js"></script>
</head>
<body>
    <h1>Create Order :)</h1>

    <form action="/customer" method="post">
        <div class="checkbox-form">
            <% locals.sectionOrder.forEach(itemKey => { %>
                <div class="section">
                    <h2><%= itemKey %></h2>
                    <% locals.itemsByType[itemKey].forEach(item => { %>
                        <input type="checkbox" id="<%= item.name %>" item-id="<%= item.id %>" name="<%= item.name %>" price="<%= item.customer_price %>">
                            <%= item.name %>
                        <br><br>
                    <% }); %>
                </div>
            <% }); %>
        </div>
        <button type="submit">Submit</button>
    </form>

    <h2>Total Price: $<span id="total-price">0.00</span></h2>

</body>

</html>


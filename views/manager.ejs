<body>
    <h1>Manager Page</h1>

     <div class = "restock-order">
        <div id="restock-itemname">
            <form action="/manager" method="post">
                
                <label for="item-name">Item name:</label>
                <input type="text" id="item-name" name="item-name"> <br>
                <%= locals.msg %>
                <button type="submit" id = "iteminfo" style="display: <%= locals.btndisp%>">Confirm</button>
            </form>
        </div>
        <div class="restock-amount" style="display: <%= locals.disp%>"> 
            <form action="/manager/COMPLETE" method="post">
                Item: <%= locals.name %> <br>
                Current inventory: <%= locals.inventory %> <%= locals.order_unit%> <br>

                <label>Restock amount ($<%=locals.restock_price%> per <%= locals.restock_amount %> <%= locals.order_unit %>):</label>
                <input type="number" min="1" id="restock-amt" name="restock-amt"> <br>

                Price: $<span id="restock-price">0.00</span><br>
                
                <button type="submit">Confirm</button>
            </form>
            <form action="/manager" method="get">
                <button type="submit">Cancel</button>
            </form>
        </div> 
    </div> 

